<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="32dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailCaseActivity"
    tools:showIn="@layout/activity_case_detail">

    <com.otaliastudios.printer.DocumentView
        android:id="@+id/documentView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:pageBackground="#fff"
        app:printSize="ISO_A5">

        <!-- Content here. -->

        <ScrollView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_span="2"
                            android:layout_weight="1"
                            android:background="@drawable/outline_border"
                            android:padding="12dp"
                            android:text="POLICE REPORT "
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:textStyle="bold" />
                    </TableRow>


                    <TableRow android:layout_marginBottom="4dp">

                        <TextView
                            android:padding="12dp"
                            android:text="Police Case Id"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textId"
                            android:layout_weight="1"
                            android:background="@drawable/outline_border"
                            android:padding="12dp"
                            android:text="oeiqowieuqqw"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="4dp">

                        <TextView
                            android:padding="12dp"
                            android:text="Police Station"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textStation"
                            android:layout_weight="1"
                            android:background="@drawable/outline_border"
                            android:padding="12dp"
                            android:text="monket banter"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="4dp">

                        <TextView
                            android:padding="12dp"
                            android:text="Police Officer"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textOfficer"
                            android:layout_weight="1"
                            android:background="@drawable/outline_border"
                            android:padding="12dp"
                            android:text="Ravi kumar"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="4dp">

                        <TextView
                            android:padding="12dp"
                            android:text="Case Details"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textCaseDetails"
                            android:layout_weight="1"
                            android:background="@drawable/outline_border"
                            android:padding="12dp"
                            android:text="Details Details Details Details\nDetails DetailsDetails"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="4dp">

                        <TextView
                            android:padding="12dp"
                            android:text="Arrest Done"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textArrestDone"
                            android:layout_weight="1"
                            android:background="@drawable/outline_border"
                            android:padding="12dp"
                            android:text="yes"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="4dp">

                        <TextView
                            android:padding="12dp"
                            android:text="Num of Convicts"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textNumConvicts"
                            android:layout_weight="1"
                            android:background="@drawable/outline_border"
                            android:padding="12dp"
                            android:text="4"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    </TableRow>


                    <TableRow android:layout_marginBottom="4dp">

                        <TextView
                            android:padding="12dp"
                            android:text="Evidence"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textEvidence"
                            android:layout_weight="1"
                            android:background="@drawable/outline_border"
                            android:padding="12dp"
                            android:text=" Evidence Details Details Details Details\nDetails DetailsDetails"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="4dp">

                        <TextView
                            android:padding="12dp"
                            android:text="Filing Date"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textDate"
                            android:layout_weight="1"
                            android:background="@drawable/outline_border"
                            android:padding="12dp"
                            android:text="12-12-12"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="4dp">

                        <TextView
                            android:padding="12dp"
                            android:text="Time of Report"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textTime"
                            android:layout_weight="1"
                            android:background="@drawable/outline_border"
                            android:padding="12dp"
                            android:text="21:30"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="4dp">

                        <TextView
                            android:padding="12dp"
                            android:text="Other Details"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textOtherDetails"
                            android:layout_weight="1"
                            android:background="@drawable/outline_border"
                            android:padding="12dp"
                            android:text="Details Details Details Details\nDetails DetailsDetails"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                    </TableRow>

                    <TableRow android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_span="2"
                            android:layout_weight="1"
                            android:padding="12dp"
                            android:text="Convict Details"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:textStyle="bold" />
                    </TableRow>

                </TableLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/convictRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/view_convict_card">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </ScrollView>
    </com.otaliastudios.printer.DocumentView>
</android.support.constraint.ConstraintLayout>