<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoliceCaseReport">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/policeReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Police Report"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="5dp" />

        <TextView
            android:id="@+id/reportOfficerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Officer"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="50dp" />

        <EditText
            android:id="@+id/reportOfficerName"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="officer name"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="82dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/policeStation"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Police Station"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="126dp" />

            <Spinner
                android:id="@+id/policeStationList"
                android:layout_width="282dp"
                android:layout_height="25dp"
                tools:layout_editor_absoluteX="122dp"
                tools:layout_editor_absoluteY="126dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/desCrimeScene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description of Crime Scene"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="160dp" />

        <TextView
            android:id="@+id/addressOfCrimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Address"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="197dp" />

        <EditText
            android:id="@+id/addressOfCrime"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Address of crime scene"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="218dp" />

        <TextView
            android:id="@+id/crimeCommittedtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Crime Committed"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="263dp" />

        <EditText
            android:id="@+id/crimeCommitted"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="What is the crime committed?"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="293dp" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Date Of Crime"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="01/01/2019"
            android:inputType="date" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Time"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="12:00 PM"
            android:inputType="time" />

        <TextView
            android:id="@+id/evidenceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. Evidence Of Crime"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="338dp" />

        <EditText
            android:id="@+id/evidenceOfCrime"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Evidence Of Crime"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="368dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who Was involved in Crime"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="413dp" />

        <TextView
            android:id="@+id/arrestMadeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Arrest Made "
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="449dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/yesArrested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="480dp" />

            <CheckBox
                android:id="@+id/notArrested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="120dp"
                tools:layout_editor_absoluteY="480dp" />

            <CheckBox
                android:id="@+id/notConfirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Confirmed"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="240dp"
                tools:layout_editor_absoluteY="480dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView13"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:text="2. No Of Convicts"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="520dp" />


        <EditText
            android:id="@+id/noOfVictims"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ex : 5"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/otherInformationtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Information"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="548dp" />

        <EditText
            android:id="@+id/otherInformation"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Any Other Information"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="575dp" />

        <Button
            android:id="@+id/submitReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />

    </LinearLayout>

</ScrollView>




