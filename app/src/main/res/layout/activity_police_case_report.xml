<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarStyle="outsideOverlay"
    tools:context=".FormReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/policeReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Police Report"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="5dp" />

        <TextView
            android:id="@+id/reportOfficerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Officer"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="50dp" />

        <EditText
            android:id="@+id/reportOfficerName"
            style="@style/editStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_form"
            android:hint="officer name"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="82dp" />





            <TextView
                android:id="@+id/policeStation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Police Station"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="126dp" />

            <Spinner
                android:id="@+id/policeStationList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:spinnerMode="dialog"
                tools:layout_editor_absoluteX="122dp"
                tools:layout_editor_absoluteY="126dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDate"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_date_range"
                android:editable="true"
                android:inputType="date"
                android:text="Date Here" />

            <Button
                android:id="@+id/btnTime"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_access_time"
                android:editable="true"
                android:inputType="time"
                android:text="Time Here" />
        </LinearLayout>

        <TextView
            android:id="@+id/desCrimeScene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of Crime Scene"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="160dp" />

        <TextView
            android:id="@+id/addressOfCrimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Address"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="197dp" />

        <EditText
            android:id="@+id/addressOfCrime"
            style="@style/editStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_form"
            android:ems="10"
            android:hint="Address of crime scene"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="218dp" />

        <TextView
            android:id="@+id/crimeCommittedtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Case Details"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="263dp" />

        <EditText
            android:id="@+id/crimeCommitted"
            style="@style/editStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_form"
            android:ems="10"
            android:hint="What is the crime committed?"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="293dp" />

        <TextView
            android:id="@+id/evidenceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Evidences Collected"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="338dp" />

        <EditText
            android:id="@+id/evidenceOfCrime"
            style="@style/editStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_form"
            android:ems="10"
            android:hint="fill the details for the evidence collection"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="368dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who Was involved in Crime"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="413dp" />

        <TextView
            android:id="@+id/arrestMadeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Arrest Made "
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="449dp" />

        <RadioGroup
            android:id="@+id/arrestStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <RadioButton
                android:id="@+id/yesArrested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="480dp" />

            <RadioButton
                android:id="@+id/notArrested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="120dp"
                tools:layout_editor_absoluteY="480dp" />

            <RadioButton
                android:id="@+id/notConfirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Not Confirmed"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="240dp"
                tools:layout_editor_absoluteY="480dp" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2. No Of Convicts"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="520dp" />

            <Spinner
                android:id="@+id/victimList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dialog"
                tools:layout_editor_absoluteX="285dp"
                tools:layout_editor_absoluteY="520dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/otherInformationtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Information"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="548dp" />

        <EditText
            android:id="@+id/otherInformation"
            style="@style/editStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_form"
            android:ems="10"
            android:hint="Any Other Information(Optional)"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="575dp" />

        <ProgressBar
            android:id="@+id/uploadBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/submitReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Submit"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>




