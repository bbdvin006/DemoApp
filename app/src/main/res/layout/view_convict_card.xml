<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    app:srcCompat="@drawable/ic_mood_bad_black_24dp" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">


                    <TextView
                        android:id="@+id/convictName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details of Convict "
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/convictAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline_border"
                        android:padding="12dp"
                        android:text="adadasdasdsadasd" />

                    <TextView
                        android:id="@+id/convictGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline_border"
                        android:padding="12dp"
                        android:text="Male" />

                    <TextView
                        android:id="@+id/convictDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline_border"
                        android:padding="12dp"
                        android:text="alskdjal kasjdlak sdalksjd alksjdalksjdalks lkajsdlkajsde" />

                    <TextView
                        android:id="@+id/convictstate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outline_border"
                        android:padding="12dp"
                        android:text="dead" />


                </android.support.v7.widget.LinearLayoutCompat>


            </TableRow>
        </TableLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>